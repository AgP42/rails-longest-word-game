<h1>New game</h1>

<div class="inline">
  <% @letters.each do |letter| %>
    <div class="blue_letters"><%= letter %></div>
  <% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letter_grid, @letters %>
  <input type="text" name="word" placeholder="Your best shot here !">
  <input type="submit">
</form>
